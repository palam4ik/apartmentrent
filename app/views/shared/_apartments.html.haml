%ul.apartments
  - @apartments.each do |apartment|
    %li
      .four_images
        %ul.columns
          %li
            %a{:href => '#'}
              %img{:src => '/images/ap1.jpg', :alt => 'appartment', :width => 167}
          %li
            %a{:href => '#'}
              %img{:src => '/images/ap2.jpg', :alt => 'appartment', :width => 167}
          %li
            %a{:href => '#'}
              %img{:src => '/images/ap3.jpg', :alt => 'appartment', :width => 167}
          %li
            %a{:href => '#'}
              %img{:src => '/images/ap4.jpg', :alt => 'appartment', :width => 167}

      .description
        %h3
          = link_to apartment.address, "/apartments/#{apartment.id}" # apartments_path(apartment.id)
