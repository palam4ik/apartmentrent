          %ul
            %li
              %strong
                = t(:id) + ':'
              = apartment.id

            %li
              %strong
                = t(:number_of_rooms) + ':'
              = apartment.rooms

            %li
              %strong
                = t(:number_of_persons) + ':'
              = apartment.num_persons
            %li
              %strong
                = t(:tv) + ':'
              = t apartment.tv
            %li
              %strong
                = t(:internet) + ':'
              = t apartment.internet
            %li
              %strong
                = t(:washing_machine) + ':'
              = t apartment.washing_machine
            %li
              %strong
                = t(:conditioner) + ':'
              = t apartment.conditioner
            %li
              %strong
                = t(:balcony) + ':'
              = t apartment.balcony.to_s
